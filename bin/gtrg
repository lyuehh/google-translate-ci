#!/bin/sh

if [ $# -eq 0 ];
then
  echo "Usage: gtrg word"
  exit 1
fi

mkdir ~/.gwords 2>/dev/null
if [ -e ~/.gwords/$1.mp3 ];then
  afplay ~/.gwords/$1.mp3
else
  curl -A "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_11_1) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/46.0.2490.80 Safari/537.36" -s -o ~/.gwords/$1.mp3 "http://translate.google.cn/translate_tts?ie=UTF-8&q=$1&tl=en&total=1&idx=0&textlen=4&tk=193776|316917&client=t&prev=input&ttsspeed=0.24"
  afplay ~/.gwords/$1.mp3
fi

